<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Nodejs + EJS</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body>
    <div class="main w-full min-h-screen bg-zinc-900">
        <div class="form p-10 text-white">
            <form action="/create" method="post">
                <input class="block p-3 w-full rounded-md outline-none bg-zinc-800" type="text"
                    placeholder="Enter Your Title" name="title" />
                <textarea class="block mt-2 p-3 w-full rounded-md outline-none bg-zinc-800 "
                    placeholder="Write your task here..." name="details"></textarea>
                <input class="mt-2 bg-blue-600 px-5 py-2 rounded-md" type="submit" value="Create Task" />
            </form>
        </div>
        <div class="tasks flex flex-wrap gap-3 p-10">

            <% if(files.length> 0){ %>
                <% files.forEach(function(value){ %>
                    <div class="task w-72 px-3 py-4 rounded-md bg-zinc-800">
                        <h1 class="text-white text-3xl tracking-tighter">
                            <%= value %>
                        </h1>
                        <div class="flex w-full justify-between item-center mt-3">
                            <a class="text-blue-500 inline-block" href="/file/<%= value %>">Read More</a>
                            <a class="text-zinc-400" href="/edit/<%= value %>">Edit</a>
                        </div>
                    </div>
                    <% }) %>
                        <% } else {%>

                            <h3 class="text-zinc-600">No tasks yet.</h3>
                            <% } %>

