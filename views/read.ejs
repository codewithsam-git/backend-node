<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Nodejs + EJS</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body>
    <div class="main w-full min-h-screen bg-zinc-900 text-white p-10">

        <div class="nav mb-6">
            <a class="text-blue-500" href="/">Add User</a>                
        </div>

        <h2 class="text-3xl tracking-tighter mb-3">All Users</h2>
        <div class="users flex gap-3 flex-wrap">
            <% if(users.length > 0){ %>
            <% users.forEach(function(value){ %>
                <div class="user w-72 p-4 bg-zinc-800 rounded-md">
                    <div class="w-full h-52 rounded-lg bg-zinc-700 overflow-hidden">
                        <img class="w-full h-full object-cover" src="<%= value.image%>"/>
                    </div>
                    <h3 class="tezt-xl mt-3 tracking-tighter"><%= value.name%></h3>
                    <h5 class="text-zinc-500"><%= value.email %></h5>
                    <div class="flex justify-between gap-3 mt-3">
                        <a class="text-zinc-400" href="/editUser/<%= value._id%>">Edit</a>
                        <a class="text-red-500" href="/deleteUser/<%= value._id%>">Delete</a>
                    </div>
                </div>
            <% }) }else {%>
                
                <h5 class="text-zinc-500">No users yet</h5>

                <% } %>
           
        </div>
    </div>
</body>

</html>